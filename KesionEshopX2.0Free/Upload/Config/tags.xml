<?xml version="1.0" encoding="utf-8"?>
<labeltemplate>
   <label name="tags">
    <![CDATA[
	      <table width="100%" border="0" cellspacing="1" cellpadding="1">
		  <tr>
			<td class="tagstitle">热门标签</td>
		  </tr>
		  <tr>
			<td class="tags">{$ShowHotTags}</td>
		  </tr>
		  <tr>
			<td class="tagstitle">最新标签</td>
		  </tr>
		  <tr>
			<td class="tags">{$ShowNewTags}</td>
		  </tr>
		</table>  
	]]>
   </label>
   
   <label name="listtp">
    <![CDATA[
	
	      <div style="height:30px;text-align:center">标签<font color=red>{$TagsName}</font>,共找到<font color=red>{$ShowTotal}</font>条相关信息。</div>
	      <table width="100%" cellpadding="0" cellspacing="0">
			<tr style='text-align:center;font-weight:bold' class="title">
			  <td width="130">图片</td>
			  <td style='text-align:left'>标题</td>
			  <td>栏目</td>
			  <td>作者</td>
			  <td>浏览</td>
			  <td>时间</td>
			</tr>
		  [loop]
			<tr class="list">
			  <td  align="center">
			  <img src="{$PhotoUrl}" width="80" height="60"/>
			  </td>
			  <td>
			  <a href="{$Url}" target="_blank">{$Title}</a></td>
			  <td align="center">{$ClassName}</td>
			  <td align="center"><a href="../space/?{$UserName}" target="_blank">{$UserName}</a></td>
			  <td align="center">{$Hits}</td>
			  <td align="center">{$AddDate}</td>
			</tr>
			[/loop]
		  </tbody>
		</table>
		<p>{$PageStr}</p>
	]]>
   </label>
   
</labeltemplate>